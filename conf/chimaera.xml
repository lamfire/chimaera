        <!--  file store sample -->
        <store type="file">
            <renew>false</renew>
            <enableCache>true</enableCache>
            <cacheSize>100000</cacheSize>
            <enableLocking>false</enableLocking>
            <enableTransactions>false</enableTransactions>
            <flushThresholdOps>-1</flushThresholdOps>
            <flushInterval>5</flushInterval>
            <fileDir>/data/chimaera/</fileDir>
        </store>

    </server>
